<!Doctype htlm>
<html>
  <head>
    <title>
      Rack Server | Customers List
    </title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
        padding: 20px;
        background-color: #f4f4f4;
      }

      h1 {
        color: #333;
        text-align: center;
        margin-bottom: 30px;
        text-transform: uppercase;
      }

      .user-card {
        width: 300px;
        margin: 10px;
        padding: 15px;
        border: 1px solid #ccc;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
      }

      .user-card:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      }

      .user-name {
        font-size: 20px;
        color: #007bff;
        margin-bottom: 5px;
      }

      .user-details {
        font-size: 16px;
        color: #555;
      }

      .delete-btn {
        background-color: #ff4444;
        color: #fff;
        display:flex;
        align-items: center;
        justify-content: center;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        margin-left: 30px;
        }

      .flex_row{
        display: flex;
        flex-direction: row;
      }
    </style>
  </head>
  <body>
    <h1> A list of all the customers </h1>
    <div class="flex_row">
          <div class="user-card">
          <div class="flex_row">
           <h2 class="user-name">
             <%= customer[:name]%>
          </h2>
           <a href="http://localhost:4000/customers/delete/?id=<%= customer[:id]%> "class="delete-btn">delete</a>
          </div>
          <p>
            <strong>Customer Email:</strong> <%= customer[:email]%>
          </p>
          <h2 class="user-name">Associated with</h2>
          <p>
            <strong>User Id:</strong> <%= customer[:user_id]%>
          </p>
          <a href="http://localhost:4000/users/show/?id=<%= customer[:user_id]%>" class="user-details"><strong>User Name:</strong> <%= customer[:user_name]%></a>
          </div>
      </div>
    </div>
  </body>
</html>
